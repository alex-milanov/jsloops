html
	head
		title JSLoops MusicXML Tests
		style.
			#container { width: 100%; height: 400px; tab-size: 4}
	body
		h1 JSLoops MusicXML Tests
		button#load-xml Load XML

		textarea#container


		//- libs
		script(src="../lib/jquery/dist/jquery.js")
		script(src="../lib/lodash/lodash.js")
		script(src="../lib/moment/moment.js")
		script(src="../js/util/xml2json.js")
		//- app
		script.
			$(document).ready(function(){
				$.ajax({
					url: "../data/hello.xml"
				}).then(function(data){

					console.log(data.nodeType);
					var jsonData = JSON.stringify(util.xmlToJson(data), null, '\t');
					
					$("#container").text(jsonData);
				})
			})