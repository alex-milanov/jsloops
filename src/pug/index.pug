html
	head
		title JSLoops - Music Making App
		link(rel="stylesheet",href="css/style.css")
	body
		.layout
			.header
				.logo
					i.fa.fa-music
					span JSLoops
				.indicators
					span BPM
					input#bpm(value="120")
				.controls
					button#play
						i.fa.fa-play
					button#stop
						i.fa.fa-stop
				.file-operations
					button(type="link")#save
						i.fa.fa-floppy-o
					input#load-file(type="file")
					button#load
						i.fa.fa-upload
					button#clear
						i.fa.fa-trash
			.panel
				.instruments-pane
					.section
						.title Instruments
						ul.entities
							li Sampler
							li Synth
			.workspace
				.sequencer
					.toolbar
						.title Sequencer
						.prefs
							span Bar Count
							input#bar-count(value="16")
					.channels
						.channel#channel0
							.channel-name channel 0
							input.channel-note#channel0-note(value="C")
							.bars
								.bar.current#channel0-bar0
								.bar#channel0-bar1
								.bar#channel0-bar2
								.bar#channel0-bar3
								.bar#channel0-bar4
								.bar#channel0-bar5
								.bar#channel0-bar6
								.bar#channel0-bar7
				.piano-roll
					.toolbar
						.title Piano Roll
						.toolbar-controls
							button.int-mode-option.selected(
								data-option-param="int-mode",
								data-option-value="select"
							)
								i.fa.fa-mouse-pointer
							button.int-mode-option(
								data-option-param="int-mode",
								data-option-value="edit"
							)
								i.fa.fa-pencil
							button.int-mode-option(
								data-option-param="int-mode",
								data-option-value="delete"
							)
								i.fa.fa-eraser
						.toolbar-controls
							button.clone-trigger(
								data-option-param="clone",
								title="clone"
							)
								i.fa.fa-clone
						.toolbar-controls
							button.copy-trigger(
								data-option-param="copy",
								title="copy"
							)
								i.fa.fa-copy
							button.paste-trigger(
								data-option-param="paste"
								title="paste"
							)
								i.fa.fa-paste
					.view
						canvas.grid
						canvas.elements
						canvas.selection
						canvas.indicators
						canvas.interaction

