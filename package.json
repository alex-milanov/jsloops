{
  "name": "jsloops",
  "version": "0.1.0",
  "description": "Web Based DAW",
  "main": "index.js",
  "scripts": {
    "prebuild": "node bin/move-assets.js",
    "build": "npm run build:js && npm run build:sass && npm run build:pug",
    "build:js": "browserify src/js/index.js -o dist/js/app.js -t [ babelify --presets [ es2015 ] ]",
    "build:sass": "node-sass --include-path=$(node bin/sass-paths.js) src/sass/style.sass dist/css/style.css",
    "build:pug": "pug --out dist --pretty src/pug",
    "watch": "npm run watch:js & npm run watch:sass & npm run watch:pug & npm run livereload",
    "watch:js": "nodemon --watch 'src/js' --exec 'npm run build:js'",
    "watch:sass": "npm run build:sass -- --watch src/sass/**/*",
    "watch:pug": "npm run build:pug -- --watch",
    "livereload": "livereload dist",
    "start": "npm run build && serve --path dist & npm run watch"
  },
  "author": "Alex Milanov <alex@i4web.biz>",
  "license": "ISC",
  "devDependencies": {
    "babel-plugin-transform-object-set-prototype-of-to-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^3.1.0",
    "eslint-config-google": "^0.6.0",
    "fs-extra": "^0.30.0",
    "livereload": "^0.5.0",
    "node-sass": "^3.8.0",
    "node-serve": "0.0.3",
    "nodemon": "^1.9.2",
    "pug-cli": "^1.0.0-alpha6"
  },
  "dependencies": {
    "font-awesome": "^4.6.3",
    "jquery": "^3.1.0",
    "lodash": "^4.13.1",
    "remove": "^0.1.5"
  }
}
